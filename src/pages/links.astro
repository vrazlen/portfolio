---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle';
import { Github, Mail, Globe } from 'lucide-react';

const links = [
  { title: 'Portfolio', url: 'https://vrazlen.github.io/portfolio', icon: Globe, subtitle: 'My personal site' },
  { title: 'GitHub', url: 'https://github.com/vrazlen', icon: Github, subtitle: '@vrazlen' },
  { title: 'Email', url: 'mailto:vrazlen599@gmail.com', icon: Mail, subtitle: 'vrazlen599@gmail.com' },
];
---

<Layout title="Links | Lenz Vrazda">
    <div class="max-w-md mx-auto py-12 flex flex-col items-center">
        <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white dark:border-slate-800 shadow-xl mb-6">
            <img src="https://github.com/vrazlen.png" alt="Profile" class="w-full h-full object-cover" />
        </div>
        
        <h1 class="text-2xl font-display font-bold text-slate-900 dark:text-slate-50 mb-2">Lenz Vrazda</h1>
        <p class="text-slate-500 dark:text-slate-400 mb-8 text-center">Building this so peoples think I'm busy.</p>

        <div class="w-full space-y-4">
            {links.map(link => (
                <a 
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center p-4 bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm hover:scale-[1.02] hover:shadow-md transition-all group"
                >
                    <div class="w-10 h-10 bg-slate-100 dark:bg-slate-800 rounded-full flex items-center justify-center text-slate-600 dark:text-slate-300 group-hover:bg-accent group-hover:text-white transition-colors">
                        <link.icon size={20} />
                    </div>
                    <div class="ml-4 flex-1">
                        <h3 class="font-medium text-slate-900 dark:text-slate-100">{link.title}</h3>
                        <p class="text-xs text-slate-500">{link.subtitle}</p>
                    </div>
                </a>
            ))}
        </div>

        <div class="mt-12">
            <ThemeToggle client:load />
        </div>
    </div>
</Layout>
